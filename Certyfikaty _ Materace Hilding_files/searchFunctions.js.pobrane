function SimpleSearch(){var data={};data['mode']='simple';data['key']=$('#searchword').val();$.ajax({url:AppDir+'index/ApplyCriteria',type:'post',dataType:'json',data:data,success:function(result){redirect_page(AppDir+'szukaj.html?hash='+result.hash);}});}function AdvSearch(catid){if(catid==undefined)catid=0;var data={};data['action']='setAdvCriteria';$('input.searchSave ').each(function(){if($(this).serialize()){if($(this).attr('type')!='checkbox'){data[$(this).attr('name')]=$(this).val();}else{if(!data[$(this).attr('name')])data[$(this).attr('name')]=[];data[$(this).attr('name')].push($(this).val());}}});$.ajax({url:AppDir+'index/getPanelContent/contentSearchByParam/'+catid,type:'post',dataType:'json',data:data,success:function(result){redirect_page(result.url+'?hash='+result.hash);}});}function ClearAdvSearch(){redirect_page(window.location.pathname);}function search_adv_cenazakres(from,to){$('#preis_from').val(from);if(to>0){$('#preis_to').val(to);}else{$('#preis_to').val('');}}function redirect_page(url){if(url==undefined){window.location.reload();return true;}window.location.href=unescape(url);}function enterDetectFunction(e,fnName){var keynum;if(window.event){keynum=e.keyCode;}else{keynum=e.which;}if(keynum==13){fnName();}}function searchAutoComplete(id){if(!id)id='searchword';$('#'+id).autocomplete({appendTo:'#wyszukiwarka',source:AppDir+'ajax/searchword',minLength:2,select:function(event,ui){SimpleSearch();}});}